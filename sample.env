# Application Container User Configuration
GROUP_ID="id -g"
GROUP_NAME="id -gn"
USER_ID="id -u"
USER_NAME="id -un"

# Application Specific Configuration
APP_PATH="pwd"
PORT=3000

# Mysql Database Configuration
MYSQL_HOST=db
MYSQL_ROOT_PASSWORD=db_root_password
MYSQL_DATABASE=app_db
MYSQL_USER=db_user
MYSQL_PASSWORD=db_password
MYSQL_PORT=3306

# Shadow database configuration
MYSQL_SHADOW_HOST=shadow_db
MYSQL_SHADOW_DATABASE=app_shadow_db
MYSQL_SHADOW_PORT=3307

# This was inserted by `prisma init`:
# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema
DATABASE_URL="mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:3306/${MYSQL_DATABASE}"
SHADOW_DATABASE_URL="mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_SHADOW_HOST}:3306/${MYSQL_SHADOW_DATABASE}"
PRISMA_STUDIO_PORT=5555

# Next Auth options
NEXTAUTH_SECRET=super_secret_jwt_token
